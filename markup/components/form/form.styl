.form
  &-row
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap


input,
textarea
  width 100%
  background none
  height 60px
  display inline-flex
  outline none
  border none
  border-bottom 1px solid #000000

button
  background none
  &.button
    width 100%
    cursor pointer
    height 60px