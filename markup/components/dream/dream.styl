.dream
  margin-bottom 30px
  &-image
    position relative
    height 100vh
    img
      width 100%
      height 100%
      object-fit cover
  &-wrapper
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 3
    padding-top 5%
    bb()
    h2
      color $BK_ONE
      margin-bottom 30px
    p
      font-size 16px
      line-height 1.55
      font-family $Medium
      margin-bottom 30px
    a
      font-size 12px
      color #c36d36
      line-height 1.55
      font-family $Semi
      text-transform uppercase
      display flex
      align-items center
      img
        max-width 50px
        margin-left 10px