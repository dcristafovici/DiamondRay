.steps
  padding-top 100px
  padding-bottom 100px
  .title
    text-align center
    margin-bottom 40px
    h2
      color $BK_ONE

  &-items
    display flex
    flex-wrap wrap
    justify-content space-between
  &-item
    width calc(50% - 50px)
    margin-bottom 100px 
    &:nth-child(2n+1)
      .steps-item__wrapper
        flex-direction column
      .steps-item__left
        margin-bottom 30px
        p
          &::before
            top -80px
    &__wrapper
      display flex
      flex-direction column-reverse
    &__left
      display flex
      align-items center
    &__number
      color $BK_ONE
      font-size 56px
      font-family $Extra
      margin-right 20px
    &__info
      font-size 22px
      line-height 1.5
      color $BK_ONE
      span
        display block
        font-family $Semi
      p
        margin-top 20px
        padding-top 20px
        line-height 1.5
        position relative
        &::before
          content ''
          position absolute
          left -10px
          top -120px
          z-index 3
          width 2px
          height 250px
          background $BK_ONE
    &__ul
      margin-top 20px
      ul
        display flex
        align-items center
        li
          margin-right 20px
          display flex
          align-items center
          font-size 14px
          font-family $Reg
          img
            margin-right 10px
          &:last-child
            margin-right 0


.steps-item
  &.steps-item__full
    width 100%
    .steps-item
      &__wrapper
        flex-direction row
        justify-content space-between
      &__right
        width 57.4074074074%
      &__number
        position relative
        top -20px
      &__left
        width 42.5925926%
        p
          &::before
            content ''
            position absolute
            left 0
            top 0
            width calc(100% + 30px)
            height 2px
            background $BK_ONE
    &.steps-item__reverse
      .steps-item
        &__wrapper
          flex-direction row-reverse
        &__left
          width 48.4074074074%
          flex-direction row-reverse
        &__right
          width 48.5925926%
        &__info
          p
            padding-right 20px
            box-sizing border-box
            &::before
              left auto
              right 10px