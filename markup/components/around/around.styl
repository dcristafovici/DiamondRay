.around
  padding-top 100px
  padding-bottom 100px
  &-wrapper
    display flex
    justify-content space-between
  &-image
    width 34.7222222222%
  &-content
    width 64.3518518519%
    background $GRAY_ONE
    bb()
    display flex
    flex-direction column

    h5
      margin 10px 0
    p
      margin-bottom 20px
      &:last-child
        margin-bottom 0
    &__top
      padding 45px
      bb()
    &__bottom
      background $BK_TWO
      flex auto
      bb()
      padding 50px
      padding-top 70px
      position relative
      &::before
        content: '';
        position: absolute; 
        border: 40px solid transparent; 
        top 0
        border-top: 40px solid $GRAY_ONE
      ul
        display flex
        flex-wrap wrap
        margin-bottom -20px
      li
        width 50%
        font-size 16px
        color $GRAY_TWO
        font-family $Reg
        margin-bottom 20px

