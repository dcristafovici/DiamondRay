.examples
  padding-bottom 100px
  &-tabs
    margin-bottom 60px
    ul
      display flex
      align-items center
      justify-content space-between
      span
        display inline-flex
        height 60px
        align-items center
        font-size 14px
        font-family $Medium
        color $BK_ONE
        cursor pointer


  &-item
    display flex
    justify-content space-between
    &__left
      width 40.9448818898%
      h4
        margin-bottom 40px
      p
        margin-bottom 25px
    &__right
      width 55.9842519685%
    &__button
      .button
        min-width 180px
    &__slide
      height 420px
      img
        width 100%
        height 100%
        object-fit cover

  &-wrapper
    position relative
  &-item
    position absolute
    left 0
    top 0
    z-index -1
    visibility hidden
    pointer-events none
    opacity 0
    &.active
      position relative
      z-index 4
      visibility visible
      pointer-events all
      opacity 1
      transition all .3s ease