.reviews
  padding-bottom 100px
  padding-top 50px
  .title
    text-align center
    margin-bottom 40px
    h2
      color $BK_ONE 
  &-slide
    &__wrapper
      display flex
      justify-content space-between
    &__photo
      width 23.8095238095%
      img
        width 100%
        height 100%
        max-height auto
        object-fit cover
    &__content
      width 76.1904762%
      background $GRAY_ONE
      padding 40px
      bb()
      display flex
      flex-direction column
      justify-content center
      p
        margin-bottom 15px
        &:last-child
          margin-bottom 0