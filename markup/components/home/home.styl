.home
  position relative
  height 100vh
  &-video
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    video
      width 100%
      height 100%
      object-fit cover
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background #000
      opacity 0.5
  &-bottom
    display flex
    justify-content space-between
  .content
    height calc(50% - 50px)
    margin-top auto
    position absolute
    top 50%
    left 50%
    transform translateX(-50%)
    display flex
    flex-direction column
    justify-content space-between
    padding-bottom 40px
    bb()
  &-advantages
    display flex
  &-adv
    margin-right 100px
    &:last-child
      margin-right 0
    span
      display block
      color $wh
      line-height 1.55
      font-size 14px
      font-family $Medium
      &:first-child
        color rgb(188, 189, 190)
        