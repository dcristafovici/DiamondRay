.realised
  padding-bottom 100px
  .title
    text-align center
    margin-bottom 100px
    h2 
      color $BK_ONE
      font-size 40px
  
  &-items
    display flex
    flex-wrap wrap
    justify-content space-between
  &-item
    width calc(50% - 50px)
    margin-bottom 50px
    &:nth-child(2n)
      margin-top 50px
    h2
      color $BK_ONE
      font-size 30px
      font-family $Medium
      margin-top 30px
      margin-bottom 30px
    .button
      margin-top 20px
      padding-left 30px
      padding-right 30px
    ul
      li
        margin-bottom 5px
        display flex
        align-items center
        &:last-child
          margin-bottom 0
        
        span
          font-size 14px
          font-family $Light
          &:first-child
            font-family $Medium
            margin-right 5px

  &-button
    display flex
    justify-content center
    align-items center
    .button
      padding-left 30px
      padding-right 30px