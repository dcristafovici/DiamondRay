.footer
  padding-top 80px
  padding-bottom 80px
  &-wrapper
    display flex
    justify-content space-between
  &-logo
    max-width 210px
    margin-bottom 30px
  &-info
    margin-bottom 30px
    a
      display block
      font-size 22px
      color $BK_ONE
  &-address
    address
      display block
      font-size 16px
  &-right
    h2
      color $BK_ONE


.popup
  padding 40px 45px
  background $wh
  max-width 560px
  text-align center
  &-title
    font-size 36px
    line-height 1.23
    color: #000
    font-family $Semi
    margin-bottom 20px
  &-span
      font-family $Light
      color #000
  &-form
    margin-bottom 10px
  &-info
    font-size 16px
    font-family $Light