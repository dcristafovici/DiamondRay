mixin footer(data)
  footer.footer
    .content.medium-full
      .footer-wrapper
        .footer-left
          .footer-logo
            img(src="static/img/assets/footer/footer.svg", alt="Footer")
          .footer-info
            a(href="tel:+7 499 647-77-17") +7 499 647-77-17
            a(href="mailto:project@diamondray.ru") project@diamondray.ru 
          .footer-address
            address г. Москва, ул Большая Грузинская 30А, 
              br
              | стр. 1, к 111
        .footer-right
          h2 Поговорим о вашем проекте?
          .footer-form
            .form-group
              input(type="text" placeholder="Ваше имя")
            .form-group
              input(type="tel" placeholder="+7 (999) 999-99-99")
            .form-group
              button.button.button-black
                span Отправить заявку


  #popup.popup
    .popup-title Закажите обратный звонок
    .popup-span Просто введите свои контакты
    .popup-form
      form.form
        .form-group
          input(type="text" placeholder="Имя")
        .form-group
          input(type="tel" placeholder="+7 (999) 999-99-99")
        .form-group
            button.button.button-black.button-filled
              span Отправить
      .popup-info Это совершено бесплатно