.portfolio
  padding-bottom 60px
  h2
    color #000
    font-size 40px
    margin-bottom 20px
  &-item
    position relative
    &__photo
      width 41.6666666667%
      height 540px
      margin-left auto
      position relative
      img
        width 100%
        height 100%
        object-fit cover
    &__content
      background #202020
      padding 30px
      padding-top 50px
      position absolute
      top 70px
      bb()
      right calc(100% - 50px)
      width 445px
      span
        display block
        color $wh
        font-size 20px
        font-family $Semi
        margin-bottom 15px
      p
        font-size 14px
        color rgba(255,255,255, 0.7)
        font-family $Medium
    &__img
      transition all .3s ease-in-out
    &__icon
      display flex
      align-items center
      position absolute
      font-family $Medium
      bottom -44.5px
      cursor pointer
      width 230px
      right calc(100% - 44.5px)
      z-index 4
      > span
        display block
        font-family $Medium
        margin-right 20px
      &:hover
        .portfolio-item__img
          transform rotate(-135deg)



.portfolio
  &-item
    margin-bottom 100px
  &-items
    margin-bottom -100px
  &-item:nth-child(2n)
    .portfolio
      &-item
        &__photo
          margin-right auto
          margin-left 0
        &__big
          left auto
          right 0
        &__content
          right auto
          left calc(100% - 50px)
        &__icon
          flex-direction row-reverse
          right auto
          left calc(100% - 44.5px)
          > span
            margin-right 0
            margin-left 20px
          &:hover
            .portfolio-item__img
              transform rotate(45deg)


.portfolio
  &-item
    position relative
    &__big
      text-transform uppercase
      font-size 155px
      color: #eeeeee
      font-family $Semi
      position absolute
      bottom 0
      left 0
    