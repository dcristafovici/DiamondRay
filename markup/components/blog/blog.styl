.blog
  background $BK_TWO
  padding-top 100px
  padding-bottom 100px
  &-items
    display flex
    justify-content space-between
    flex-wrap wrap
    margin-bottom -40px
  &-item
    width calc(50% - 50px)
    margin-bottom 40px
    &__date
      margin-top: 10px
      display block
      color $GRAY_TWO
      margin-bottom 5px
    &__name
      margin-bottom 10px
      h4
        color $wh
    &__text
      p
        color $wh


.blog-item
  &.single
    display flex
    justify-content space-between
    .blog-item
      &__photo
        width 54.3307086614%
        img
          width 100%
          
      &__content
        width 42%
